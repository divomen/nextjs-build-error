{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@lib/a/*": ["packages/a/*"],
      "@lib/b/*": ["packages/b/*"]
    },
    "esModuleInterop": true,
    "module": "esnext",
    "jsx": "preserve",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
